@page
@model ECommerce.Ui.Areas.Product.Pages.AddModel
@{
    ViewData["Title"] = "Add Product";
}

<form method="post" enctype="multipart/form-data">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom">
            <h2 class="text-primary">Product Details</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductVM.Product.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductVM.Product.Name" class="form-control" />
                    <span asp-validation-for="ProductVM.Product.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductVM.Product.Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="ProductVM.Product.Description" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductVM.Product.Price"></label>
                </div>
                <div class="input-group col-8">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">RM</span>
                    </div>
                    <input type="number" asp-for="ProductVM.Product.Price" class="form-control" />
                    <span asp-validation-for="ProductVM.Product.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Category
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(model => model.ProductVM.Product.CategoryId, Model.ProductVM.CategoryList, "- Select a product category -", new { @class = "form-control"})
                    <span asp-validation-for="ProductVM.Product.CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Image
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-success form-control">Add</button>
                        </div>
                        <div class="col">
                            <a asp-page="/Index" class="btn btn-danger form-control">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}