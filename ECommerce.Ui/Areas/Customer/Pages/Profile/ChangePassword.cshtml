@page
@model ECommerce.Ui.Areas.Customer.Pages.Profile.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<form method="post">
    <div class="row p-3 border">
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col-8 pt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.CurrentPassword"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.CurrentPassword" class="form-control" />
                    <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.NewPassword"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.NewPassword" class="form-control" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.ConfirmNewPassword"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.ConfirmNewPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmNewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-success form-control">Submit</button>
                        </div>
                        <div class="col">
                            <a asp-page="/Index" class="btn btn-danger form-control">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
