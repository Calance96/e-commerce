@page
@model Admin.Pages.Category.IndexModel
@{
    ViewData["Title"] = "Categories";
}

<br />
<div class="p-4 border rounded">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="./Create" class="btn btn-primary text-white">
                <i class="fas fa-plus"></i>&nbsp; Create New Category
            </a>
        </div>
    </div>

    <hr />

    <table class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Name</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Categories.Count() > 0)
            {
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>
                            @category.Name
                        </td>
                        <td>
                            <div class="text-center">
                                <form asp-page-handler="Delete" asp-route-id="@category.Id" method="post">
                                    <a class="btn btn-success text-white" asp-page="Edit" asp-route-id="@category.Id" style="cursor:pointer">
                                        <i class="far fa-edit"></i>&nbsp; Edit
                                    </a>
                                    <button type="submit" onclick="showDeleteConfirmation('@category.Name')" class="btn btn-danger text-white" style="cursor:pointer">
                                        <i class="fas fa-trash"></i>&nbsp; Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="bg-light text-center">
                    <td colspan="7">
                        No category found in the database.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    <script>
        function showDeleteConfirmation(categoryName) {
            event.preventDefault();
            var form = event.target.form;
            Swal.fire({
                icon: 'question',
                title: 'Delete Confirmation',
                text: `Are you sure you want to delete the ${categoryName} category?`,
                showCancelButton: true,
                cancelButtonColor: 'red'
            }).then(confirm => {
                if (confirm.value)
                    form.submit();
            });
        }
    </script>
    @if (TempData["ErrorMessage"] != null)@* Delete error when there is association*@
    {
        <script>
            Swal.fire({
                'icon': 'error',
                'title': 'Operation unsuccessful',
                'text': "@TempData["ErrorMessage"]",
            });
        </script>
    }

    @if (TempData["Message"] != null)
    {
        <script async>
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-bottom-left",
                "preventDuplicates": true,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "2000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }

            $(document).ready(function () {
                toastr.success("@TempData["Message"]", "E-Mall");
            });
        </script>
    }
}
