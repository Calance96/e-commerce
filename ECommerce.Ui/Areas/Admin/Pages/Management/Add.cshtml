@page
@model ECommerce.Ui.Areas.Admin.Pages.Management.AddModel
@{
    ViewData["Title"] = "New Admin Details";
}

<div class="container">
    <div style="margin: 30px auto;" class="border w-50">
        <h2 class="text-center mt-3 font-weight-bold">@ViewData["Title"]</h2>
        <div class="col">
            <section>
                <form id="account" method="post" autocomplete="off">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input type="password" asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input type="password" asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Name"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Address"></label>
                        <textarea asp-for="Input.Address" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Confirm</button>
                        </div>
                        <div class="col">
                            <a asp-page="./Index" class="btn btn-danger form-control">Cancel</a>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>